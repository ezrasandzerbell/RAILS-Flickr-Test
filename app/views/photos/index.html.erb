<h1>Index</h1>

<div class="well">

<% if @photos.any? %>
<% @photos.each do |photo| %>
 <li>
   <div class="card blue-grey darken-1">
     <div class="card-content white-text">
    <%= image_tag photo.imgfile, :class => "photo-size" %>
    <%= link_to photo.title, photo_path(photo)%>
    </div>
  </div>

 </li>
 <% end %>
 <% else %>
<p>
  There are no photos
</p>
<% end %>
</div>
<br>
<div class ="bar">
</div>
<br>
<%= link_to "New photo", new_photo_path %>
