
<div class="card blue-grey darken-1 size-big">
  <div class="card-content white-text">
<%= image_tag @photo.imgfile, :class => "photo-size" %>
<%= @photo.title %>
<%= @photo.user.email %>
<br>
<% if @photo.tags.any? %>
  <% @photo.tags.each do |tag| %>

  <%= link_to tag.name + " X", photo_tag_path(@photo, tag.id), :data => {:confirm => "Are you sure?",:method => "delete"}, :class => "chip"%>
  <%= link_to "Rename", edit_photo_tag_path(@photo, tag.id), :class => "waves-effect waves-light btn" %> <br>
  <% end %>
  <% else %>
  <p>
    No tags
  </p>
<% end %>
</div>
</div>
<% if current_user == @photo.user  %>
<%= link_to "Edit", edit_photo_path %>
<%= link_to "Delete photo", photo_path(@photo, @photo.id), :data => {:confirm => "Are you sure?",:method => "delete"}%>
<%= link_to "Add Tag", new_photo_tag_path(@photo) %>
<% end %>
