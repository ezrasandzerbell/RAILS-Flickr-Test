<h1>Flickr Home</h1>


<% if @photos.any? %>
<% @photos.each do |photo| %>
 <li>
   <div class="card blue-grey darken-1">
     <div class="card-content white-text">
    <%= image_tag photo.imgfile, :class => "photo-size" %>
    <%= link_to photo.title, photo_path(photo)%>
    </div>
  </div>

 </li>
 <% end %>
 <% else %>
<p>
  There are no photos
</p>
<% end %>
